<tr>
  <th scope="row"><%= user.id %></th>
  <td><%= user.username %></td>
    <td><%= user.email %></td>
  <td><%= user.created_at %></td>
  <td>
    <%= link_to admin_user_path user do %>
        <i class="bi bi-eye"></i>
    <% end %>
    <%= link_to edit_admin_user_path user do %>
        <i class="bi bi-pen"></i>
    <% end %>
    <%= link_to admin_user_path(user), data: { "turbo-method": :delete, turbo_confirm: "You sure?" } do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </td>
</tr>